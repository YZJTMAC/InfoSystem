		</isNotNull>
		<isNotNull property="phone">
		phone = #phone#,
		</isNotNull>
		<isNotNull property="schoolName">
		school_name = #schoolName#,
		</isNotNull>
		<isNotNull property="subject">
		subject = #subject#,
		</isNotNull>
		<isNotNull property="section">
		section = #section#,
		</isNotNull>
		<isNotNull property="memo">
		memo = #memo#,
		</isNotNull>
		update_by = #updateBy#,
		update_date = now()
		where
		id = #id#
	</update>
	<select id="get_memos" parameterClass="java.util.HashMap" resultClass="project.master.pojo.EduComparisonComment">
		select 
			IFNULL(p_memo,'æ— ') as provinceMemo,
			IFNULL(c_memo,'æ— ') as cityMemo,
			IFNULL(d_memo,'æ— ') as districtMemo
		from 
			edu_comparison_comment
		where 
			id = #id#
	</select>
</sqlMap>